<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>UploadImageAvatar</servlet-name>
        <servlet-class>com.travelink.Servlet.UploadImageAvatar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAvatar</servlet-name>
        <servlet-class>com.travelink.Servlet.UpdateAvatar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeCustomerPasswordServlet</servlet-name>
        <servlet-class>com.travelink.Servlet.ChangeCustomerPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <servlet-class>com.travelink.Servlet.RegisterCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginGoogleHandler</servlet-name>
        <servlet-class>com.travelink.Servlet.LoginGoogleHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadImageAvatar</servlet-name>
        <url-pattern>/UploadImageAvatar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAvatar</servlet-name>
        <url-pattern>/UpdateAvatar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeCustomerPasswordServlet</servlet-name>
        <url-pattern>/ChangeCustomerPasswordServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <url-pattern>/RegisterCustomerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginGoogleHandler</servlet-name>
        <url-pattern>/LoginGoogleHandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
